{
    "name": "ton-mcp",
    "version": "2.0.8",
    "description": "TON MCP Server - Complete Model Context Protocol server for TON blockchain development. Comprehensive crawler indexes ALL docs.ton.org (500+ pages), live blockchain data, code generation, and Telegram Mini Apps support.",
    "main": "dist/index.js",
    "bin": {
        "ton-mcp": "dist/index.js"
    },
    "keywords": [
        "ton",
        "blockchain",
        "mcp",
        "ai",
        "development",
        "telegram-mini-apps",
        "smart-contracts",
        "dapps"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/kunaldhongade/ton-mcp"
    },
    "homepage": "https://github.com/kunaldhongade/ton-mcp#readme",
    "bugs": {
        "url": "https://github.com/kunaldhongade/ton-mcp/issues"
    },
    "license": "MIT",
    "author": "Kunal Dhongade <kunaldhongade1@gmail.com>",
    "type": "module",
    "files": [
        "dist",
        "README.md",
        "AI_USAGE_GUIDE.md",
        "package.json",
        "docs-index.json"
    ],
    "scripts": {
        "build": "rm -rf dist && tsc && cp -r src/resources dist/",
        "start": "node dist/index.js",
        "dev": "tsx src/index.ts",
        "watch": "tsx watch src/index.ts",
        "index-docs": "tsx src/scripts/index-docs.ts",
        "test": "node scripts/test-mcp.js",
        "prepare-publish": "node scripts/prepare-publish.js",
        "release": "./scripts/release.sh"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^0.4.0",
        "@ton/core": "^0.56.0",
        "@ton/crypto": "^3.3.0",
        "@ton/ton": "^13.11.0",
        "zod": "^3.24.4",
        "axios": "^1.6.0",
        "cheerio": "^1.0.0-rc.12",
        "fuse.js": "^7.0.0",
        "markdown-it": "^14.0.0"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "tsx": "^4.7.0",
        "typescript": "^5.3.0"
    }
}